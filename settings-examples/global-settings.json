{
  "env": {
    "TRACE_TO_LANGFUSE": "true",
    "LANGFUSE_PUBLIC_KEY": "pk-lf-local-claude-code",
    "LANGFUSE_SECRET_KEY": "YOUR_SECRET_KEY_HERE",
    "LANGFUSE_HOST": "http://localhost:3050",
    "TRACE_TO_GRAFANA": "false",
    "GRAFANA_OTLP_ENDPOINT": "https://otlp-gateway-prod-us-central-0.grafana.net/otlp",
    "GRAFANA_INSTANCE_ID": "YOUR_INSTANCE_ID",
    "GRAFANA_API_TOKEN": "YOUR_API_TOKEN"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/langfuse_hook.py"
          }
        ]
      }
    ]
  }
}
